
{% set items = breadcrumb|default([]) %}
<nav aria-label="breadcrumb" class="breadcrumb-container mt-4">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <a href="{{site.url}}">
        Accueil
      </a>
    </li>
    {% for item in breadcrumb %}
      {% if item.current %}
        <li class="breadcrumb-item active" aria-current="page">
          {{item.title}}
        </li>
      {% else %}
        <li class="breadcrumb-item">
          <a href="{{item.url}}">{{item.title}}</a>
        </li>
      {% endif %}
    {% endfor %}
  </ol>
</nav>
