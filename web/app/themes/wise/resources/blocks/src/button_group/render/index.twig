<div class="buttons">
	{% for button in data.buttons %}
		{% if button.type == 'file' %}
			{% set href = button.file.guid %}
		{% elseif button.type == 'link' %}
			{% set href = button.url %}
		{% endif %}

	<a class="mr-2 btn btn-outline-maniv" href="{{ href }}" {% if button.open_in_new_tab == 1 or button.type == 'file' %}target="_blank"{% endif %}>
		{{ button.title }}
	</a>

	{% endfor %}
</div>

{% if fields.type == 'file' %}
	{% set href = fields.file.guid %}
{% elseif fields.type == 'link' %}
	{% set href = fields.url %}
{% endif %}

<div class="block-button">
	<a href="{{ href }}" class="btn btn-outline-maniv" {% if fields.open_in_new_tab == 1 or fields.type == 'file' %}target="_blank"{% endif %}>
		{{ fields.title }}
	</a>
</div>
